<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_picture_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.davidyuan7536.workoutlog.ProfilePictureFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/profilePictureListView"
            android:text="List View"
            android:background="@color/greyPrimary"
            android:textColor="@color/white"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/profilePictureGridView"
            android:text="Grid View"
            android:background="@color/greyPrimary"
            android:textColor="@color/white"
            style="@style/Widget.AppCompat.Button.Borderless"/>



    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profilePictureRecycleView"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


</LinearLayout>
