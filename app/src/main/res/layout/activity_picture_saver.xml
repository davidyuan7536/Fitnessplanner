<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.davidyuan7536.workoutlog.PictureSaverActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/buttonsContainer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >


        <com.example.davidyuan7536.workoutlog.MLRoundedImageView
            android:id="@+id/pictureSaverPictureRound"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/pictureSaverPicture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitStart" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pictureSaverPictureCaption"
            android:textSize="14sp"
            android:hint="Please Insert a Photo Caption (140 Characters max)"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:maxLines="3"
            android:maxLength="140"
            android:gravity="top" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/buttonsContainer"
        android:layout_alignParentBottom="true">


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pictureSaverSaveBtn"
            android:src="@drawable/ic_done_black_24dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/pictureSaverCancelBtn"
            android:src="@drawable/ic_clear_black_24dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"/>

    </LinearLayout>

